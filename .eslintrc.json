{
	"root": true,
	"extends": "vue",
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module",
		"ecmaFeatures": {
			"generators": false,
			"objectLiteralDuplicateProperties": false
		}
	},
	// required to lint *.vue files
	"plugins": [
		"html"
	],
	// add your custom rules here
	"rules": {
		// allow paren-less arrow functions
		"arrow-parens": [
			"error",
			"as-needed",
			{
				"requireForBlockBody": true
			}
		],
		// allow debugger during development
		"no-debugger": 0,
		// Indentation
		"indent": [
			"error",
			"tab"
		],
		"no-tabs": "off",
		// Require or disallow a space before function parenthesis
		"space-before-function-paren": [
			"error",
			{
				"anonymous": "always",
				"named": "never",
				"asyncArrow": "always"
			}
		]
	}
}
